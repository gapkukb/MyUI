.carousel
  overflow hidden
  width 100%
  height 100%
  background-color #ddd
  position relative

  &__track
    width 100%
    height 100%
    display flex
    transition transform 500ms ease-out
  &__item
    flex-shrink 0
    width 100%
    background-color #f00
    font-size 100px
    text-align center
  &__indicator
    position absolute
    left 50%
    bottom 10px
    transform translateX(-50%)
    width 100%
    display inline-flex
    justify-content center
    &>li
      width 10px
      height 10px
      background-color #999
      margin 0 2px
      border-radius 50%
      &.active
        background-color #fff
     
  &__ctrl
    position absolute
    top 50%
    font-size 20px
    padding 1em
    background url("data:image/svg+xml,%3Csvg viewBox='0 0 1024 1024' xmlns='http://www.w3.org/2000/svg' width='1em' height='1em'%3E%3Cpath d='M361.6 19.2l486.4 488-486.4 488-128-126.4L600 507.2 225.6 129.6 350.4 8z'/%3E%3C/svg%3E") no-repeat center center
    background-size 50% 
    cursor pointer
    border-radius 99px
    background-color rgba(255,255,255,.5)
    opacity 0.5
    transition opacity 300ms
    &:hover
      opacity 1
    &.prev
      left 10px
      transform translateY(-50%) scale(-1)
    &.next
      right 10px
      transform translateY(-50%) 
