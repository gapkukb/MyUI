.carousel
  position relative
  overflow hidden
  width 100%
  height 100%
  background-color #ddd
  touch-action none
  user-select none
  &__track
    display flex
    width 100%
    height 100%
    transition transform 500ms ease-out

  &__item
    flex-shrink 0
    width 100%
    background-color #f00
    text-align center
    font-size 100px

  &__indicator
    position absolute
    bottom 10px
    left 50%
    display inline-flex
    justify-content center
    width 100%
    transform translateX( -50% )

    &>li
      margin 0 2px
      width 10px
      height 10px
      border-radius 50%
      background-color #999
      cursor pointer

      &.active
        background-color #fff

  &__ctrl
    position absolute
    top 50%
    padding 1em
    border-radius 99px
    background url( "data:image/svg+xml,%3Csvg viewBox='0 0 1024 1024' xmlns='http://www.w3.org/2000/svg' width='1em' height='1em'%3E%3Cpath d='M361.6 19.2l486.4 488-486.4 488-128-126.4L600 507.2 225.6 129.6 350.4 8z'/%3E%3C/svg%3E" ) no-repeat center center
    background-color rgba( 255, 255, 255, 0.5 )
    background-size 50%
    font-size 20px
    opacity 0.5
    cursor pointer
    transition opacity 300ms
    appearance none
    outline 0
    border 0
    &:not(:disabled):hover
      opacity 1

    &.prev
      left 10px
      transform translateY( -50% ) scale( -1 )

    &.next
      right 10px
      transform translateY( -50% )
