$vars = json( "../../json/vars.json", { hash: true } )
$colors = $vars.colors

.button
    position relative
    display inline-flex
    flex-wrap nowrap
    align-items center
    overflow visible
    max-width 100%
    outline 0
    border 0
    background-color currentColor
    text-align center
    text-decoration none
    text-transform none
    white-space nowrap
    font-weight 400
    cursor pointer
    transition opacity 300ms
    user-select none
    appearance button
    -webkit-text-fill-color #fff
    // before 负责边框样式 after负责交互态
    &:before
    &:after
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        box-sizing border-box
        border-radius inherit
        content ""
        pointer-events none

    &:before
        border 0.5px solid

    &:active:after
    &:focus:after
        z-index 2
        box-shadow 0 0 0 2px
        opacity 0.8

    &:not(:disabled):hover
        opacity 0.7

    $size( height, padding, font )
        padding 0 padding
        height height
        font-size font
        line-height @height

    &.large
        $size 48px 24px 16px

    &.normal
        $size 40px 16px 14px

    &.small
        $size 32px 8px 12px

    &.mini
        $size 24px 4px 12px

    &.block
        display block
        width 100%

    &.primary
        color $colors.blue

    &.danger
        color $colors.red

    &.default
        background none
        -webkit-text-fill-color inherit

        &>^[0]__text
            color inherit

    &.success
        color $colors.green

    &.info
        color $colors.cyan

    &.warning
        color $colors.amber

    &.link
        border-color transparent
        color $colors.blue
        text-decoration underline

    &.dark
        color $colors.black

    &.light
        color $colors.white

    &.outline
        background none
        -webkit-text-fill-color inherit

        &>^[0]__text
            color inherit

    &.harline:before
        top -50%
        right -50%
        bottom -50%
        left -50%
        transform scale( 0.5 )

    &__text
        overflow hidden
        min-width 0
        color #fff
        text-overflow ellipsis

        &+&
            margin-left 8px

    &__loading
        display none
