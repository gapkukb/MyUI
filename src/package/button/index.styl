@import "../../stylus/vars.styl"

$colors = $vars.colors

.button
    position relative
    display inline-flex
    flex-wrap nowrap
    justify-content center
    align-items center
    overflow visible
    box-sizing border-box
    max-width 100%
    outline 0
    border 1px solid
    background-color currentColor
    color inherit
    text-decoration none
    text-transform none
    white-space nowrap
    font-weight 400
    cursor pointer
    transition box-shadow 200ms
    user-select none
    appearance button
    -webkit-text-fill-color #fff

    // before 负责边框样式 after负责交互态
    &:before
    &:after
        position absolute
        top -1px
        right -1px
        bottom -1px
        left -1px
        box-sizing border-box
        border-radius inherit
        pointer-events none
        content ""
        opacity 0
    &:before
        border 0.5px solid

    &:after
        background-color #fff
        transition opacity 200ms

    &:disabled
    &.disabled
        opacity 0.6
        cursor not-allowed

    &.disabled
        pointer-events none

    &:not(:disabled):not(.disabled)
        &:hover:after
            opacity 0.1

        &:active:after
            background-color #000

    &:focus:before
        box-shadow 0 0 0 3px
        opacity 0.5
        z-index 2

    $size( height, padding, font )
        padding 0 padding
        height height
        font-size font
        line-height @height

    &.large
        $size 48px 24px 16px

    &.normal
        $size 40px 16px 14px

    &.small
        $size 32px 8px 12px

    &.mini
        $size 24px 4px 12px

    &.block
        display block
        width 100%

    &.default
        color $colors.gray

    &.primary
        color $colors.blue

    &.danger
        color $colors.red

    &.success
        color $colors.green

    &.info
        color $colors.cyan

    &.warning
        color $colors.amber

    &.link
        border-color transparent
        background none
        color $colors.blue
        text-decoration underline

    &.dark
        color $colors.black

    &.light
        color $colors.gray-light
        -webkit-text-fill-color $colors.black

    &.hollow
        background none
        -webkit-text-fill-color inherit

    &.borderless
        border-width 0

