@keyframes spin
    to
        transform rotate( 360deg )

@keyframes facebook
    0%
        top 8px
        transform scaleY( 2 )

    50%
    100%
        top 24px
        transform scaleY( 1 )

.loading
    display inline-flex
    padding 0.1em
    vertical-align middle
    font-size 100px

    &__spiner
        animation spin 1s ease-in-out infinite

    &__icon
        position relative
        box-sizing border-box
        width 1em
        height 1em
        vertical-align middle
        opacity 0.8

    &1
        border 0.1em solid blue
        border-radius 50%
        animation spin 1s ease-in-out infinite

        &:before
            position absolute
            top 0
            left 50%
            width 0.3em
            height 0.3em
            border-radius 99px
            background-color blue
            content ""
            transform translate( -50%, -50% )

    &2
        border 0.1em solid #999
        border-top-color blue
        border-radius 50%

    &3
        border 0.1em solid blue
        border-top-color transparent
        border-radius 50%
        animation-timing-function linear

    &4
        display inline-flex
        justify-content space-evenly
        align-items center

        >i
            width 0.22em
            height 0.5em
            background-color currentColor
            animation facebook 1.2s cubic-bezier( 0, 0.5, 0.5, 1 ) infinite

            &:nth-child(1)
                animation-delay -0.24s

            &:nth-child(2)
                animation-delay -0.12s

    &5
        position relative
        border-radius 50%
        box-shadow inset 0 0 0 1em
        color #ffffff
        text-indent -99999em
        font-size 11px
        transform translateZ( 0 )

        &:before
        &:after
            position absolute
            border-radius 50%
            content ""

        &:before
            top -0.1em
            left -0.1em
            width 5.2em
            height 10.2em
            border-radius 10.2em 0 0 10.2em
            background #0dc5c1
            transform-origin 5.1em 5.1em
            animation load2 2s infinite ease 1.5s

        &:after
            top -0.1em
            left 4.9em
            width 5.2em
            height 10.2em
            border-radius 0 10.2em 10.2em 0
            background #0dc5c1
            transform-origin 0.1em 5.1em
            animation load2 2s infinite ease

@keyframes load2
    0%
        transform rotate( 0 )
        -webkit-transform rotate( 0 )

    100%
        transform rotate( 360deg )
        -webkit-transform rotate( 360deg )
