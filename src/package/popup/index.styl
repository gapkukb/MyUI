body
    touch-action manipulation

#app
    overflow hidden auto
    width 100vw
    height 100vh
    -webkit-overflow-scrolling touch

.overlay
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index 0
    background-color rgba( 0, 0, 0, 0.5 )

.popup
    position fixed
    top 0
    left 0
    overflow hidden auto
    width 100%
    height 100%
    overscroll-behavior contain

    &__inner
        width 300px
        background-color #fff

        &.center
            top 50%
            left 50%
            transform translate( -50%, -50% )

        &.left
            top 50%
            left 0
            transform translate( 0, -50% )

        &.right
            top 50%
            right 0
            transform translate( 0, -50% )

        &.top
            top 0
            left 50%
            transform translate( -50%, 0 )

        &.bottom
            bottom 0
            left 50%
            transform translate( -50%, 0 )

        &.fullscreen
            top 0
            right 0
            width 100%
            height 100%
