.image
    max-width 100%
    max-height 100%
    outline 0
    border 0

    &:not([src])
    &[src=""]
        visibility hidden

    &.contain
        object-fit contain

    &.cover
        object-fit cover

    &.fill
        object-fit fill

    &.none
        object-fit none

    &.scale
        object-fit scale-down
        object-position left
