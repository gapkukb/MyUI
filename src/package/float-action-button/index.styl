.fab
    position fixed
    right 16px
    bottom 16px

    &__body
        position absolute
        display inline-flex

        &.horizontal
            right 100%
            bottom 0
            align-items center
            height 100%

        &.vertical
            bottom 100%
            left 0
            flex-direction column
            flex-wrap wrap
            align-items center
            width 100%
