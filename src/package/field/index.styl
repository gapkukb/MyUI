.field
    border-radius 99px

    &.disabled
        opacity 0.5
        cursor not-allowed

    &.center
        align-items center

    &__body
        position relative
        display flex
        flex-wrap wrap
        align-items center
        overflow hidden
        box-sizing border-box
        width 100%
        background-color #fff
        line-height 24px

        &.large
            padding 12px 16px
            font-size 16px

        &.normal
            padding 8px 12px
            font-size 14px

        &.small
            padding 4px 8px
            font-size 12px

        &.bordered
            border 0.5px solid red
            border-radius inherit

        &.focus
            border-color blue

    &__icon
        display block
        flex-shrink 0
        margin -8px
        padding 8px
        color #999

        &--clear
            margin-left 0

        &--left
            margin-right 0

        &--right
            margin-left 0

    &__click
        cursor pointer

    &__label
        flex none
        box-sizing border-box
        margin-right 12px
        word-wrap break-word

    &__main
        position relative
        display flex
        flex 1
        align-items center
        overflow visible
        word-wrap break-word

    &__value
        flex 1
        box-sizing border-box
        margin 0
        padding 0
        width 0
        outline 0
        border 0
        background none
        color inherit
        font inherit
        resize none
        appearance none
        /*
        &:focus+^[0]__border
            position absolute
            top 0
            right 0
            bottom 0
            left 0
            z-index -1
            border 0.5px solid red
            border-radius inherit
            pointer-events none 
        */

    &__button
        flex-shrink 0
        padding-left 8px

    &__prefix
    &__suffix
        background-color #ccc

    &__helper
        display flex
        font-size 12px
        line-height 16px

    &__message
        flex 1
        text-align right
        font-size 12px

        &.error
            color #ee0a24

        &.success
            color green

    &__limit
        color #646566

        &:only-child
            margin-left auto

    .left
        text-align left

    .center
        text-align center

    .right
        text-align right
