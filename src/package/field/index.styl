.field
    padding 10px 16px

    &.disabled
        opacity 0.5
        cursor not-allowed

    &.center
        align-items center

    &.normal
        font-size 14px

    &__body
        position relative
        display flex
        align-items center
        overflow hidden
        box-sizing border-box
        width 100%
        background-color #fff
        line-height 24px

    &__icon
        display block
        flex-shrink 0
        margin -8px
        padding 8px
        color #999
        // font-size 16px
        line-height inherit

        &--clear
            margin-left 0

        &--left
            margin-right 0

        &--right
            margin-left 0

    &__click
        cursor pointer

    &__label
        flex none
        box-sizing border-box
        margin-right 12px
        word-wrap break-word

    &__main
        position relative
        display flex
        flex 1
        align-items center
        overflow visible
        word-wrap break-word

    &__value
        flex 1
        box-sizing border-box
        margin 0
        padding 0
        width 0
        outline 0
        border 0
        background none
        color inherit
        font inherit
        resize none

    &__button
        flex-shrink 0
        padding-left 8px

    &__helper
        display flex
        font-size 12px
        line-height 16px

    &__message
        flex 1
        text-align right
        font-size 12px

        &.error
            color #ee0a24

        &.success
            color green

    &__limit
        color #646566

        &:only-child
            margin-left auto

    .left
        text-align left

    .center
        text-align center

    .right
        text-align right
