.popup
  &__overlay
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index 0
    background-color rgba( 0, 0, 0, 0.5 )

  &__inner
    position fixed
    z-index 1
    max-height 100vh
    width 300px
    background-color #fff

    &.center
      top 50%
      left 50%
      transform translate( -50%, -50% )

    &.left
      top 50%
      left 0
      transform translate( 0, -50% )

    &.right
      top 50%
      right 0
      transform translate( 0, -50% )

    &.top
      top 0
      left 50%
      transform translate( -50%, 0 )

    &.bottom
      bottom 0
      left 50%
      transform translate( -50%, 0 )

    &.fullscreen
      top 0
      right 0
      width 100%
      height 100%
