$bgcolor = #eee
$color = #0064B4

.progress
  position relative
  overflow hidden
  width 160px
  height 30px
  border 1px solid currentColor
  border-radius 99px
  background-color $bgcolor
  color $color

  &::-moz-progress-bar
    background currentColor
    transition width 200ms

  &::-webkit-progress-bar
    background inherit

  &::-webkit-progress-value
    background currentColor
    transition width 200ms

  &:before
    position absolute
    top 50%
    left 50%
    color #fff
    content attr( value ) "%"
    font-size 12px
    transform translate( -50%, -50% )

  &__offset
    transition stroke-dashoffset 300ms
